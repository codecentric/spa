<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="root_layout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:orientation">vertical</item>
	</style>
	<style name="root_layout.with_margins">
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingLeft">6dp</item>
		<item name="android:paddingRight">6dp</item>
	</style>
	<style name="root_list">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
	</style>
	<style name="rec_ctrl_container">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:paddingTop">50dp</item>
		<item name="android:paddingBottom">50dp</item>
		<item name="android:paddingLeft">25dp</item>
		<item name="android:paddingRight">25dp</item>
		<item name="android:orientation">vertical</item>
	</style>
	<style name="rec_btn">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:background">@drawable/microphone_enabled_config</item>
	</style>
	<style name="rec_lbl">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">30dp</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">16sp</item>
	</style>
	<style name="rec_progress" parent="@android:style/Widget.ProgressBar.Horizontal">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center</item>
	</style>
	<style name="play_btn">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:background">@drawable/ic_play_config</item>
	</style>
	<style name="stop_btn">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:background">@drawable/ic_stop_config</item>
	</style>
	<style name="default_label">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">16sp</item>
	</style>
	<style name="default_input">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:textSize">16sp</item>
		<item name="android:ellipsize">end</item>
		<item name="android:hint">@string/hint_tap</item>
		<item name="android:singleLine">true</item>
		<item name="android:inputType">textCapSentences</item>
		<item name="android:gravity">left|center_vertical</item>
	</style>
	<style name="default_input.multiline">
		<item name="android:layout_height">200dp</item>
		<item name="android:singleLine">false</item>
		<item name="android:gravity">top|left</item>
	</style>
	<style name="default_input.readonly">
		<item name="android:hint"></item>
		<item name="android:editable">false</item>
		<item name="android:clickable">false</item>
	</style>
	<style name="choose_action_item">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">16sp</item>
	</style>
	<style name="line_break">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">5dp</item>
	</style>
	<style name="line_break.big">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">10dp</item>
	</style>
	<style name="note_list_item">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="note_list_item.labels">
		<item name="android:layout_width">260dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:paddingTop">8dp</item>
		<item name="android:paddingBottom">8dp</item>
		<item name="android:paddingLeft">6dp</item>
	</style>
	<style name="note_list_item.text">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="note_list_item.img_desc">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">right</item>
		<item name="android:gravity">right</item>
	</style>
	<style name="note_list_item.marker_img">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">right</item>
		<item name="android:gravity">right</item>
		<item name="android:layout_marginLeft">1dp</item>
		<item name="android:layout_marginRight">1dp</item>
		<item name="android:visibility">invisible</item>
	</style>
	<style name="default_button">
		<item name="android:layout_width">160dp</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="default_button.image">
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:drawablePadding">10dp</item>
	</style>
	<style name="map_view">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">100dp</item><!-- layout_height should be adjusted programmatically -->  
		<item name="android:enabled">true</item>
		<item name="android:clickable">true</item>
		<item name="android:apiKey">@string/google_maps_api_key</item>
	</style>
	<style name="default_input.txt_note_due_time">
		<item name="android:layout_width">260dp</item>
		<item name="android:editable">false</item>
		<item name="android:inputType">none</item>
		<item name="android:hint">@string/hint_select</item>
	</style>
	<style name="alarm_btn">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:adjustViewBounds">true</item>
		<item name="android:layout_gravity">center_vertical</item>
	</style>
</resources>